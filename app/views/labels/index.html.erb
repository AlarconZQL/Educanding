<ul class="list-group">

  <%@etiquetas.order(:nombre).each do |etiqueta|%>
  <li class="list-group-item">
  <%= etiqueta.nombre %>
  <button type="button" class="btn btn-warning">Modificar</button>
  <button type="button" class="btn btn-danger">Eliminar</button>
 </li>

  <%end%>
<% if session[:user_id] != 0 %>
  <li class="list-group-item">
        <form class="form-inline" action="/labels/create" method="post">
          <div class="form-group">
           <label for="nombre">Nombre:</label>
           <input type="text" class="form-control" name="nombre" id="nombre">
           <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-top: 20px;">Crear Etiqueta</button>
          </div>

          <% if flash[:message] != nil %>

            <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
            <div class="w3-panel w3-blue w3-display-container" style="margin-top: 50px;">
            <span onclick="this.parentElement.style.display='none'"class="w3-button w3-blue w3-large w3-display-topright">&times;</span>
            <h4>Atenci√≥n!</h4>
            <br>
            <p><%= flash[:message] %></p>
            <%flash[:message]=nil%>
            </div>

          <% end %>

    </form>
  </li>
  <%end%>

</ul>
