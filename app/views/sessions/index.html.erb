
<div class="container">
    <form class="form-signin" action="/sessions/create" method="post" >
        <input id="auxiliar" type="hidden" value="1"/>
        <h4 class="form-signin-heading text-center" style="margin-bottom: 20px;">Datos de Usuario</h4>
        <label for="email" class="sr-only">Email address</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Direccion de correo" required autofocus style="margin-bottom: 15px;">
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Contrasena" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-top: 20px;">Ingresar</button>

        <% if flash[:message] != nil %>

          <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
          <div class="w3-panel w3-blue w3-display-container" style="margin-top: 50px;">
          <span onclick="this.parentElement.style.display='none'"class="w3-button w3-blue w3-large w3-display-topright">&times;</span>
          <h4 class="mb-1 text-center">Atenci√≥n!</h4>
          <br>
          <p><%= flash[:message] %></p>
          <%flash[:message]=nil%>
          </div>

        <% end %>


    </form>





</div>
